<BorderPane fx:controller="Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <GridPane fx:id="topbuttons" alignment="BASELINE_LEFT">
            <Button fx:id="download" onAction="#download" text="download"
                    GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button fx:id="upload" onAction="#upload" text="upload"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        </GridPane>
    </top>
    <center>
        <SplitPane fx:id="fileOverviewPane">
            <items>
                <ListView fx:id="serverFiles">

                </ListView>
                <ListView fx:id="localFiles">

                </ListView>
            </items>
        </SplitPane>
    </center>
</BorderPane>
